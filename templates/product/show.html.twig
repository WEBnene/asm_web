{% extends 'base.html.twig' %}

{% block title %}Product Information{% endblock %}

{% block body %}
    <h1>Product Information</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Seri</th>
                <td>{{ product.Seri }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.Price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.Quantity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">Back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
