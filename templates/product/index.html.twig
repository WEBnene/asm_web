{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product list</h1>
    <table id="product" class="table table-striped table-bordered" style="width:100%">
    <a href="{{ path('app_product_new') }}">Create new</a>
        <thead>
            <tr>
                <th>ID</th>
                <th>Seri</th>
                <th>Category</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.Seri }}</td>
                <td>{{ product.category.id }}</td>
                <td>{{ product.Name }}</td>
                <td>{{ product.Price }}</td>
                <td>{{ product.Quantity }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">Show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}