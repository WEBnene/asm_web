{% extends 'base.html.twig' %}

{% block title %}Staff list{% endblock %}

{% block body %}
    <h1>Staff list</h1>
    <a href="{{ path('app_staff_new') }}">Create new</a>
    <table id="product" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Birthday</th>
                <th>Phone_number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for staff in staff %}
            <tr>
                <td>{{ staff.id }}</td>
                <td>{{ staff.FirstName }}</td>
                <td>{{ staff.LastName }}</td>
                <td>{{ staff.Birthday ? staff.Birthday|date('Y-m-d') : '' }}</td>
                <td>{{ staff.PhoneNumber }}</td>
                <td>
                    <a href="{{ path('app_staff_show', {'id': staff.id}) }}">Show</a>
                    <a href="{{ path('app_staff_edit', {'id': staff.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
