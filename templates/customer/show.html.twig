{% extends 'base.html.twig' %}

{% block title %}Customer Information{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ customer.FirstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ customer.LastName }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ customer.Birthday ? customer.Birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ customer.PhoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customer_index') }}">Back to list</a>

    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">Edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
